{
  "name": "dictionary-of-welsh-biography",
  "version": "1.0.2",
  "description": "Wikidata and HistropediaJS driven timeline of people in the Dictionary of Welsh Biography",
  "scripts": {
    "postinstall": "run-p install:server install:client",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "start": "run-p build:dev start:server",
    "start:server": "cd server && npm start",
    "build:dev": "cd client && npm run dev",
    "build:production": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/histropedia/dictionary-of-welsh-biography.git"
  },
  "author": "Histropedia",
  "license": "GPL-3.0",
  "homepage": "https://bitbucket.org/histropedia/dictionary-of-welsh-biography#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
